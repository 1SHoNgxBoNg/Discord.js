{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"lib": ["ESNext", "DOM", "DOM.Iterable"],
		"jsx": "preserve",
		"baseUrl": ".",
		"noEmit": true,
		"paths": {
			"~/*": ["./src/*"],
			"contentlayer/generated": ["./.contentlayer/generated"]
		},
		"esModuleInterop": true,
		"allowJs": true,
		"incremental": true,
		"plugins": [
			{
				"name": "next"
			}
		]
	},
	"include": ["**/*.ts", "**/*.tsx", "next-env.d.ts", ".next/types/**/*.ts", ".contentlayer/generated"],
	"exclude": ["node_modules"]
}
